{
  "name": "electron-react-starter",
  "private": true,
  "version": "0.0.0",
  "main": "build/main.js",
  "scripts": {
    "dev:web": "vite",
    "dev": "concurrently 'vite' 'wait-on tcp:5173 && npm run watch:main'",
    "watch:main": "nodemon --watch electron -e ts,json --exec 'npm run build:main && electron .'",
    "start": "npm run build && electron .",
    "build:main": "tsc --project tsconfig.electron.json",
    "build:renderer": "tsc --project tsconfig.json && vite build",
    "build": "npm run build:main && npm run build:renderer --",
    "lint": "eslint .",
    "package": "npm run build && electron-builder --config electron.build.json"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitejs/plugin-react": "^3.0.0",
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.11",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "wait-on": "^7.0.1"
  }
}
